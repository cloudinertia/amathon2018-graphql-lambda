service: "amathon-hands-on"

provider:
  name: aws
  runtime: nodejs8.10
  stage: ${opt:stage}
  region: ap-northeast-2
  environment:
    NODE_ENV: ${opt:stage}
    ASSETS_URL: "https://s3.ap-northeast-2.amazonaws.com/amathon-hands-on-${opt:stage}"

functions:
  graphql:
    handler: handler.graphql
    memorySize: 512
    timeout: 5
    events:
      - http:
          path: /root
          method: ANY
          cors: true
      - http:
          path: /root/{proxy+}
          method: ANY
          cors: true
  testdic:
    handler: src/testdic/handler.graphql
    memorySize: 512
    timeout: 5
    events:
      - http:
          path: /testdic
          method: ANY
          cors: true
      - http:
          path: /testdic/{proxy+}
          method: ANY
          cors: true
  testtest:
    handler: src/testtest/handler.graphql
    memorySize: 512
    timeout: 5
    events:
      - http:
          path: /testtest
          method: ANY
          cors: true
      - http:
          path: /testtest/{proxy+}
          method: ANY
          cors: true



package:
  exclude:
    - schemas//**

plugins:
  - serverless-offline

custom:
  serverless-offline:
    port: 4000

